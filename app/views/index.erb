<% if current_user %>
  <div class="new-post">
    <a href="/post/new" class="button">New Post</a>
  </div>
<% end %>

<header>
    <h1>Pickler</h1>
    <div class="login-info">
      <% if current_user %>
        <%= current_user.username %>
        <img class="user_avatar" src="<%= current_user.avatar_url %>">
        <a href="/logout">Logout</a>
      <% else %>
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
      <% end %>
    </div>
</header>
<main role="main">
  <% @posts.each do |post| %>
    <%= erb :'shared/post', locals: {post: post } %>  #this is pointing to a file to render.
  <% end %>
</main>